{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "ES2022",
    "outDir": "../dist",
    "rootDir": "./",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "Node",
    "baseUrl": "./",
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "esm": true,
    "require": [
      "tsconfig-paths/register",
    ]
  },
  "include": [
    "**/*.ts" // Include all files in the Root directory including starter file
  ],
  "exclude": [
    "public/*",
    "node_modules",
    "dist",
    "**/*.js"
  ]
}